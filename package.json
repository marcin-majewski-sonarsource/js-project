{
  "name": "build-tools-demo",
  "version": "0.0.1",
  "description": "Build tools example project of the \"preferred\" build process setup at Holiday Extras for reference and new projects. ",
  "main": "index.js",
  "repository": "local",
  "config": {
    "port": 3040
  },
  "scripts": {
    "setup": "echo \"No setup process required\" && exit 0",
    "clean_build": "npm-run-all clean build",
    "clean": "rm -rf ./dist/*",
    "build": "npm-run-all --parallel build:* ",
    "build:less": "lessc --source-map --source-map-less-inline ./src/stylesheets/index.less ./dist/stylesheets/index.css",
    "build:metalsmith": "metalsmith",
    "build:static": "ncp ./src ./dist --filter \\.html$",
    "build:webpack": "webpack --config webpack.config.js",
    "deploy": "npm-run-all --parallel deploy:* ",
    "deploy:assets": "echo \"pending deploy:assets\" && exit 0",
    "start": "npm-run-all --parallel start:*",
    "start:inspector": "node-inspector --no-preload",
    "start:metalsmith": "watchy -w ./src/**/*.haml,./src/**/*.md -- npm run build:metalsmith",
    "start:serve": "serve ./dist -p $npm_package_config_port",
    "start:selenium": "echo \"pending start:selenium\" && exit 0",
    "start:static": "watchy -w ./src/**/*.html -- npm run build:static",
    "start:less": "watchy -w ./src/stylesheets/**/* -- npm run build:less",
    "start:livereload": "livereload ./dist -p 35729",
    "start:webpack": "webpack --watch",
    "test": "npm-run-all test:* ",
    "test:selenium": "echo \"pending test:selenium\" && exit 0",
    "test:mocha": "mocha ./tests --require ./tests/support/setup.js",
    "ci": "npm-run-all ci:*",
    "ci:circle": "npm-run-all test:mocha",
    "ci:coverage": "istanbul cover --report text-lcov ./node_modules/.bin/_mocha -- ./tests --require ./tests/support/setup.js -R spec | ./node_modules/coveralls/bin/coveralls.js",
    "coverage": "istanbul cover _mocha -- ./tests --require ./tests/support/setup.js",
    "lint": "npm-run-all lint:*",
    "lint:javascript": "echo \"pending lint:javascript\" && exit 0",
    "lint:less": "echo \"pending lint:less\" && exit 0",
    "debug": "node debug localhost:5858"
  },
  "dependencies": {},
  "devDependencies": {
    "babel-core": "latest",
    "babel-loader": "latest",
    "babel-preset-es2015": "latest",
    "babel-preset-react": "latest",
    "chai": "latest",
    "chai-enzyme": "latest",
    "chalk": "latest",
    "commander": "latest",
    "coveralls": "^2.11.6",
    "css-loader": "latest",
    "dirty-chai": "latest",
    "enzyme": "^1.0.0",
    "hamljs": "latest",
    "handlebars": "latest",
    "istanbul": "^0.4.2",
    "jsdom": "latest",
    "less": "latest",
    "less-loader": "latest",
    "livereload": "latest",
    "metalsmith": "latest",
    "metalsmith-ignore": "latest",
    "metalsmith-in-place": "latest",
    "metalsmith-layouts": "latest",
    "metalsmith-markdown": "latest",
    "mocha": "latest",
    "ncp": "latest",
    "node-inspector": "latest",
    "npm-run-all": "latest",
    "react": "latest",
    "react-dom": "latest",
    "serve": "latest",
    "sinon": "latest",
    "sinon-chai": "latest",
    "style-loader": "latest",
    "watchy": "latest",
    "webpack": "latest"
  },
  "author": "Matthew Spence",
  "license": "ISC"
}
